<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout_forecast"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FF1976D2"
    tools:context=".ForecastFragment">

    <!-- TextView để hiển thị ngày -->
    <TextView
        android:id="@+id/text_view_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/thursday"
        android:textSize="18sp"
        android:padding="16dp"
        android:gravity="center"
        android:background="#FF1976D2"
        android:textColor="#FFFFFFFF"
     />


    <!-- ImageView để hiển thị biểu tượng thời tiết -->
    <ImageView
        android:id="@+id/image_view_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/cloudy_08"
        app:drawableTopCompat="@drawable/cloudy_08"
        android:background="#66000000"
        android:contentDescription="@string/weather_icon_description"
        />

</LinearLayout>
